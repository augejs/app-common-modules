{
  "npmClient": "npm",
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "publish": {
      "ignoreChanges": [
        "**/*.md",
        "**/__tests__/**"
      ],
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org"
    },
    "version": {
      "allowBranch": [
        "master",
        "feature/*"
      ]
    }
  },
  "packages": [
    "packages/*"
  ],
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "version": "1.5.0"
}
