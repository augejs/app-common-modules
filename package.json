{
  "name": "root",
  "private": true,
  "scripts": {
    "clean:node_modules": "lerna clean",
    "init:node_modules": "lerna bootstrap",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "build": "lerna run build",
    "publish": "lerna publish --skip-git",
    "publish:canary": "lerna publish --canary",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "build:apiDoc": "rimraf apiDocs && typedoc --tsconfig ./tsconfig.json --options ./typedoc.config.json && mkdir -p ./apiDocs/docs/assets && cp -r ./docs/assets/* ./apiDocs/docs/assets",
    "deploy:apiDoc": "npm run build:apiDoc && gh-pages -d apiDocs"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/node": "^14.14.36",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.23.0",
    "gh-pages": "^3.1.0",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@augejs/core": "1.0.4"
  }
}
